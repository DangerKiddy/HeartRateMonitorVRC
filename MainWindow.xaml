<Window x:Class="HeartRateMonitorVRC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeartRateMonitorVRC"
        mc:Ignorable="d"
        Title="" Height="105" Width="365" ResizeMode="NoResize">
    <Grid Background="#FF2D2D2D">
        <Button Content="Scan" IsEnabled="True" x:Name="ScanButton" Click="Retry_Click"  HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="46" RenderTransformOrigin="0.144,-3.095" Opacity="1"/>
        <TextBlock HorizontalAlignment="Center" x:Name="StatusText" TextWrapping="Wrap" Text="Current status" VerticalAlignment="Top" Width="345" TextAlignment="Right" Margin="0,10,0,0" Height="20" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" x:Name="BPMText" Margin="10,0,0,10" TextWrapping="Wrap" Text="0 BPM" VerticalAlignment="Bottom" Height="44" Width="164" Foreground="White" FontSize="36" Opacity="0"/>
        <Button Content="Select device" IsEnabled="False" x:Name="SelectDeviceButton" Click="SelectDevice_Click" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="28" Width="103"/>

    </Grid>
</Window>
