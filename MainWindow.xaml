<Window x:Class="HeartRateMonitorVRC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        Title="HeartRateMonitor"
        Height="180" Width="320"
        ResizeMode="CanMinimize"
        Background="#FF2D2D2D"
        WindowStyle="SingleBorderWindow">
	<Border Padding="8">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="0" Grid.Column="0" ShowGridLines="False">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid Grid.Row="0" ShowGridLines="False">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					<TextBlock Grid.Column="0" Grid.Row="0"
					           Grid.RowSpan="2"
					           x:Name="BpmText"
					           Text="000"
					           Foreground="White"
					           VerticalAlignment="Center"
					           HorizontalAlignment="Right"
					           FontSize="64"
					           FontFamily="/Resources/Fonts/#Unispace Bold" />
					<Image Grid.Row="0" Grid.Column="1"
					       VerticalAlignment="Bottom"
					       x:Name="HeartIcon"
					       Height="30" Width="30"
					       Source="/Resources/Images/heart.png" />
					<TextBlock Grid.Row="1" Grid.Column="1"
					           Text="BPM"
					           VerticalAlignment="Top"
					           TextAlignment="Center"
					           Height="30" Width="56"
					           Foreground="White"
					           FontSize="24"
					           FontFamily="Franklin Gothic Medium" />
				</Grid>
				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="1"
					           Text="Lowest"
					           Foreground="White"
					           FontFamily="Franklin Gothic Medium"
					           FontSize="11" />
					<TextBlock Grid.Column="2" x:Name="BpmTextLowest" TextWrapping="Wrap" Text="000"
					           Margin="5 0 0 0"
					           Foreground="White"
					           VerticalAlignment="Center"
					           FontFamily="/Resources/Fonts/#Unispace Bold" />

					<TextBlock Grid.Column="4" Text="Highest"
					           Foreground="White"
					           FontFamily="Franklin Gothic Medium"
					           FontSize="11" />
					<TextBlock Grid.Column="5" x:Name="BpmTextHighest" TextWrapping="Wrap" Text="000"
					           Margin="5 0 0 0"
					           Foreground="White"
					           VerticalAlignment="Center"
					           FontFamily="/Resources/Fonts/#Unispace Bold" />
				</Grid>

			</Grid>
			<Grid Grid.Row="0" Grid.Column="1"
			      Grid.RowSpan="2"
			      VerticalAlignment="Center" Width="100" 
			      Margin="8 0 0 0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Button Grid.Row="0"
				        Content="Select device"
				        IsEnabled="False"
				        x:Name="SelectDeviceButton"
				        HorizontalAlignment="Stretch"
				        Margin="0 0 0 8"
				        Click="SelectDevice_Click" />
				<Button Grid.Row="1"
				        Content="Scan"
				        IsEnabled="True"
				        x:Name="ScanButton"
				        HorizontalAlignment="Stretch"
				        Click="Retry_Click" />
			</Grid>
			<TextBlock Grid.Row="1" Grid.Column="0"
			           Grid.ColumnSpan="2"
			           x:Name="StatusText"
			           Text="Current status"
			           Margin="0 8 0 0"
			           Foreground="White" />
		</Grid>
	</Border>
</Window>